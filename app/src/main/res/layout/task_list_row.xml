<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="3dp"
        android:layout_height="78dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="85dp"
        android:background="#ccc" />

    <TextView
        android:id="@+id/taskDate"
        android:text="2017-09-03"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="16dp"
        android:textSize="10sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <View
        android:id="@+id/taskIconImage"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="32dp"
        android:layout_marginLeft="24dp"
        android:background="@drawable/ic_assignment_black_24dp"/>

    <View
        android:id="@+id/taskDot"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="76dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/circle"/>


    <TextView
        android:id="@+id/taskStatus"
        android:layout_alignParentTop="true"
        android:layout_marginTop="13dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginRight="10dp"
        android:text="Open"/>

    <TextView
        android:id="@+id/withdrawnText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Withdrawn"
        android:layout_marginTop="12dp"
        android:textColor="@color/colorAccent"
        android:layout_marginRight="14dp"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/taskDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_below="@id/taskStatus"
        android:layout_alignLeft="@id/taskStatus"/>

</RelativeLayout>


